<div class="container py-5">
  <h3>Company</h3>
  <div class="row">
    <div class="col">
      <%= link_to "< Companies", companies_path %>
    </div>
    <div class="col-1 text-right">
      <%= link_to "Edit", edit_company_path %>
    </div>
    <div class="col-1 text-right">
      <%= link_to "Delete", company_path , method: :delete, data: {title: "Delete Confirmation", confirm: "Are you sure want to delete \"#{@company.name}\" company?"}, class: "text-danger" %>
    </div>
  </div>
  <div class="bg-success">
    <div class="container p-5 text-white">
      <h1><%= @company.name %></h1>
      <h3><%= "#{@company.city || 'City'}, #{@company.state || 'State'}" %></h3>
      <pre>☝️ Here the city and state are updated based on the zipcode</pre>
    </div>
  </div>
  <% if @company.description.present? %>
    <div class="bg-light p-5">
      <%= @company.description %>
    </div>
  <% end %>
  <div class="bg-success text-white text-center py-3">
    <p class="lead"><%= @company.phone %> — <%= @company.email %></p>
  </div>
</div>
